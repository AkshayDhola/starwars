<Project Sdk="Microsoft.NET.Sdk">

  <PropertyGroup>
    <OutputType>Exe</OutputType>
    <TargetFramework>net9.0</TargetFramework>
    <ImplicitUsings>enable</ImplicitUsings>
    <Nullable>enable</Nullable>
  </PropertyGroup>

  <ItemGroup>
    <Content Include="Scripts/install.sh">
      <!-- Ensure the scripts are copied to the root of the publish directory -->
      <CopyToOutputDirectory>PreserveNewest</CopyToOutputDirectory>
      <PublishState>on</PublishState>
      <Visible>false</Visible> <!-- Hides them in Visual Studio Solution Explorer if needed -->
    </Content>
    <Content Include="Scripts/Install.ps1">
      <CopyToOutputDirectory>PreserveNewest</CopyToOutputDirectory>
      <PublishState>on</PublishState>
      <Visible>false</Visible>
    </Content>
  </ItemGroup>

</Project>
